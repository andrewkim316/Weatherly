{
    "manifest_version": 2,
    "name": "Weatherly",
    "description": "Accurate, hourly weather, cross-checked with multiple sources.",
    "version": "1",
    "author": "Andrew Kim",
    "permissions": ["activeTab","declarativeContent"],
    "page_action": {
        "default_popup": "weatherly_datapage.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' https://maps.googleapis.com; object-src 'self'"
}